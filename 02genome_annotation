bowtie2-build --threads 2 ../genome_assembly/AtAre1/04quickmerge_out00/purge_dups/Are-1.smartdenovo_flye_merge.purged.fa ../genome_assembly/AtAre1/04quickmerge_out00/purge_dups/Are-1.smartdenovo_flye_merge.purged.fa 
bowtie2 -f -a --very-sensitive -p 2 -x ../genome_assembly/AtAre1/04quickmerge_out00/purge_dups/Are-1.smartdenovo_flye_merge.purged.fa -U ../ref_genome/telomeric_repeat_motif.fa -S ../genome_evaluation/AtAre1/00Bowtie2_out/telomeric_repeat_motif.Are-1.purged.sam && samtools view -bS ../genome_evaluation/AtAre1/00Bowtie2_out/telomeric_repeat_motif.Are-1.purged.sam | samtools sort | samtools view -h > ../genome_evaluation/AtAre1/00Bowtie2_out/telomeric_repeat_motif.Are-1.purged.srt.sam
bowtie2 -f -a --very-sensitive -p 2 -x ../genome_assembly/AtAre1/04quickmerge_out00/purge_dups/Are-1.smartdenovo_flye_merge.purged.fa -U ../ref_genome/centromeric_repeat_motif.fa -S ../genome_evaluation/AtAre1/00Bowtie2_out/centromeric_repeat_motif.Are-1.purged.sam && samtools view -bS ../genome_evaluation/AtAre1/00Bowtie2_out/centromeric_repeat_motif.Are-1.purged.sam | samtools sort | samtools view -h > ../genome_evaluation/AtAre1/00Bowtie2_out/centromeric_repeat_motif.Are-1.purged.srt.sam






